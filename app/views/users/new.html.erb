<h1>Sign Up</h1>
<%=form_for User.new do |f| %>
	<% if @user.errors.any? %>
	<% end %>
    
    <% @user.errors.full_messages.each do |msg| %>
    	<p><%= msg %></p>
    <% end %>

	<%=f.label :email %>
	<%=f.text_field :email %>
	<%=f.label :password %>
	<%=f.password_field :password %>
	<%=f.label :password_confirmation %>
	<%=f.password_field :password_confirmation %>
	<%=f.submit "Sign Up" %>
<%end%>